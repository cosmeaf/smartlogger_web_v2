// ENDPOINT PRINCIPAL: /database/tc-devices
app.get('/database/tc-devices', (req, res) => {
  console.log('üì° Requisi√ß√£o recebida para buscar dispositivos...');
  
  const query = 'SELECT * FROM tc_devices';
  
  connection.query(query, (error, results) => {
    if (error) {
      console.error('‚ùå Erro na query:', error);
      return res.status(500).json({
        success: false,
        message: 'Erro ao buscar dispositivos da tabela tc_devices',
        error: error.message
      });
    }
    
    console.log(`‚úÖ Encontrados ${results.length} dispositivos`);
    
    res.json({
      success: true,
      data: results,
      count: results.length,
      table: 'tc_devices',
      query: query,
      message: `${results.length} dispositivos encontrados com sucesso`
    });
  });
});

// NOVO ENDPOINT: /database/tc-positions
app.get('/database/tc-positions', (req, res) => {
  console.log('üìç Requisi√ß√£o recebida para buscar posi√ß√µes...');
  
  const limit = req.query.limit || 1000; // Limite padr√£o para evitar sobrecarga
  const deviceId = req.query.deviceId;
  
  let query = 'SELECT * FROM tc_positions';
  let queryParams = [];
  
  if (deviceId) {
    query += ' WHERE deviceid = ?';
    queryParams.push(deviceId);
  }
  
  query += ' ORDER BY fixtime DESC LIMIT ?';
  queryParams.push(parseInt(limit));
  
  connection.query(query, queryParams, (error, results) => {
    if (error) {
      console.error('‚ùå Erro na query:', error);
      return res.status(500).json({
        success: false,
        message: 'Erro ao buscar posi√ß√µes da tabela tc_positions',
        error: error.message
      });
    }
    
    console.log(`‚úÖ Encontradas ${results.length} posi√ß√µes`);
    
    res.json({
      success: true,
      data: results,
      count: results.length,
      table: 'tc_positions',
      query: query,
      limit: limit,
      deviceId: deviceId || 'todos',
      message: `${results.length} posi√ß√µes encontradas com sucesso`
    });
  });
});

